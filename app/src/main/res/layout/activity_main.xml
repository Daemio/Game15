<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/tvMoves"
        android:text="Moves: 0"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:textSize="40dp"
        android:textStyle="bold"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvTime"
        android:text="Time: 0 seconds"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:textSize="40dp"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvMoves"
        android:layout_marginTop="10dp"/>

    <LinearLayout
        android:id="@+id/llField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/tvTime"
        android:layout_marginTop="10dp">
    </LinearLayout>

    <RadioGroup
        android:id="@+id/rgDifficulity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/llField"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp">
        <RadioButton
            android:id="@+id/rbEasy"
            android:text="Easy"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:checked="true"
            android:textSize="20dp"
            android:layout_weight="1"/>

        <RadioButton
            android:id="@+id/rbMedium"
            android:text="Medium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:checked="false"
            android:textSize="20dp"
            android:layout_weight="1"/>

        <RadioButton
            android:id="@+id/rbHard"
            android:text="Hard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:checked="false"
            android:textSize="20dp"
            android:layout_weight="1"/>
    </RadioGroup>

    <LinearLayout
        android:layout_below="@+id/rgDifficulity"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp">

        <Button
            android:id="@+id/btnNewGame"
            android:text="New Game"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:textSize="20dp"
            android:padding="5dp"/>

        <Button
            android:id="@+id/btnLoadGame"
            android:text="Load Game"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:textSize="20dp"
            android:padding="5dp"/>

        <Button
            android:id="@+id/btnSaveGame"
            android:text="Save Game"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:textSize="20dp"
            android:padding="5dp"/>


    </LinearLayout>

</RelativeLayout>
