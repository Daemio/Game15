<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="#0A0A2A">

    <TextView
        android:text="Difficulity"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textStyle="bold"/>
    <RadioGroup
        android:id="@+id/rgDifficulity"
        android:background="#81BEF7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp">
        <RadioButton
            android:id="@+id/rbEasy"
            android:text="Easy"
            android:textColor="@android:color/white"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:checked="true"
            android:textSize="15dp"
            android:layout_weight="1"/>

        <RadioButton
            android:id="@+id/rbMedium"
            android:text="Medium"
            android:textColor="@android:color/white"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:checked="false"
            android:textSize="15dp"
            android:layout_weight="1"/>

        <RadioButton
            android:id="@+id/rbHard"
            android:text="Hard"
            android:textColor="@android:color/white"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:checked="false"
            android:textSize="15dp"
            android:layout_weight="1"/>
    </RadioGroup>

    <TextView
        android:text="Highscore(best time):"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/tvHighscoreBestTime"
        android:text=""
        android:textColor="#F3F781"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"/>
    <TextView
        android:text="Highscore(minimum moves):"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/tvHighscoreMinMoves"
        android:text=""
        android:textColor="#F3F781"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp">
        <Button
            android:id="@+id/btnCancel"
            android:text="Cancel"
            android:textColor="@android:color/white"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:background="@drawable/menu_btn"/>
        <Button
            android:id="@+id/btnSave"
            android:text="Save"
            android:textColor="@android:color/white"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:background="@drawable/menu_btn"/>
        <Button
            android:id="@+id/btnReset"
            android:text="Reset"
            android:textColor="@android:color/white"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:background="@drawable/menu_btn"/>

    </LinearLayout>

</LinearLayout>